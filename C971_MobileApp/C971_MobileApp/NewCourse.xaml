<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971_MobileApp.NewCourse"
             Title="New Course"
             x:Name="NewCourseXaml"
             BindingContext="{x:Reference NewCourseXaml}">
    
    <VerticalStackLayout>
        <Grid HorizontalOptions="CenterAndExpand"
              WidthRequest="300"
              x:Name="CourseItem"
              Padding="10"
              Background="Transparent">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Entry Placeholder="Course Name"
                   x:Name="Name"
                   Grid.ColumnSpan="2"
                   Grid.Row="0"
                   FontSize="Medium"/>
            <Editor Placeholder="Course Description"
                    x:Name="Description"
                   Grid.ColumnSpan="2"
                   Grid.Row="1"
                   FontSize="Medium"
                   AutoSize="TextChanges"/>
            <Label Text="Start Date:"
                   Grid.Column="0"
                   Grid.Row="2"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   FontSize="Medium"/>
            <DatePicker Date="{Binding SelectedStartDate}"
                        x:Name="StartDate"
                        MinimumDate="01/01/2023"
                        MaximumDate="12/31/2099"
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalOptions="Fill"
                            FontSize="Medium"/>
            <Label Text="End Date:"
                   Grid.Column="0"
                   Grid.Row="3"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   FontSize="Medium"/>
            <DatePicker Date="{Binding SelectedEndDate}"
                        x:Name="EndDate"
                        MinimumDate="01/01/2023"
                        MaximumDate="12/31/2099"
                        Grid.Row="3"
                        Grid.Column="1"
                        FontSize="Medium"/>
            <Label Text="Active Course: "
                   FontSize="Medium"
                   Grid.Column="0"
                   Grid.Row="4"
                   VerticalTextAlignment="Center"/>
            <Switch IsToggled="True"
                    x:Name="ActiveSwitch"
                    OnColor="Blue"
                    ThumbColor="LightBlue"
                    Grid.Column="1"
                    Grid.Row="4"
                    HorizontalOptions="Center"/>
            <Label Text="Instructor: "
                   Grid.Column="0"
                   Grid.Row="5"
                   FontSize="Medium"
                   VerticalTextAlignment="Center"/>
            <Label x:Name="InstructorName"
                   Grid.Column="1"
                   Grid.Row="5"
                   FontSize="Medium"
                   VerticalTextAlignment="Center"/>
        </Grid>
        <Button Text="Add Course"
                WidthRequest="200"
                FontSize="Medium"
                Clicked="AddCourseButton"/>
    </VerticalStackLayout>
</ContentPage>