<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="C971_MobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:C971_MobileApp"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="True" >


    <TabBar>
        <ShellContent
          Title="Home"
          Icon="home.svg"
          ContentTemplate="{DataTemplate local:MainPage}"
          Route="MainPage" />

        <ShellContent 
            Title="Degree Plan"
            Icon="plan.svg"
            ContentTemplate="{DataTemplate local:Terms}"
            Route="Terms"/>

        <ShellContent
          Title="Instructors"
          Icon="instructor.svg "
          ContentTemplate="{DataTemplate local:Instructors}"
          Route="Instructors"/>


    </TabBar>

</Shell>