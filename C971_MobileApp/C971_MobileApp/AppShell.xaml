<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="C971_MobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:C971_MobileApp"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="True" >


    <TabBar>
        <ShellContent
          Title="Home"
          Icon="dotnet_bot.png"
          ContentTemplate="{DataTemplate local:MainPage}"
          Route="MainPage" />

        <Tab Title="Terms"
             Icon="dotnet_bot.png">
            <ShellContent
          Title="Term 1"
          Icon=" "
          ContentTemplate="{DataTemplate local:MainPage}"
          Route="MainPage" />

            <ShellContent
          Title="Term 2"
          Icon=" "
          ContentTemplate="{DataTemplate local:Terms}"
          Route="Terms"/>

            <ShellContent
            Title="Term 3"
             Icon=" "
             ContentTemplate="{DataTemplate local:Settings}"
            Route="Settings"/>
        </Tab>

        <ShellContent
          Title="Instructors"
          Icon="dotnet_bot.png "
          ContentTemplate="{DataTemplate local:Instructors}"
          Route="Instructors"/>

        <ShellContent
            Title="Settings"
             Icon="dotnet_bot.png "
             ContentTemplate="{DataTemplate local:Settings}"
            Route="Settings"/>

    </TabBar>

</Shell>